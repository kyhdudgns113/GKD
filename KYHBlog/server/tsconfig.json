{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",

    "paths": {
      "@common/*": ["src/common/*"],
      "@dto/*": ["src/common/types/dto/*"],
      "@httpDataType/*": ["src/common/types/httpDataTypes/*"],
      "@module/*": ["src/modules/*"],
      "@port/*": ["src/modules/database/ports/*"],
      "@shareType/*": ["src/common/types/shareTypes/*"],
      "@socketType/*": ["src/common/types/socketTypes/*"],
      "@secret/*": ["src/common/secret/*"],
      "@src/*": ["src/*"],
      "@test/*": ["test/*"],
      "@testCommon": ["test/_common/*"],
      "@util/*": ["src/common/utils/*"],

      "@commons": ["src/common"],
      "@dtos": ["src/common/types/dto"],
      "@httpDataTypes": ["src/common/types/httpDataTypes"],
      "@modules": ["src/modules"],
      "@ports": ["src/modules/database/ports"],
      "@shareTypes": ["src/common/types/shareTypes"],
      "@socketTypes": ["src/common/types/socketTypes"],
      "@secrets": ["src/common/secret"],
      "@src": ["src"],
      "@test": ["test"],
      "@testCommons": ["test/_common"],
      "@utils": ["src/common/utils"]
    },

    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "target": "ES2021"
  }
}
